{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/C",
                    // The path to VsDevCmd.bat depends on the version of Visual Studio you have installed.
                    "\"C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\Common7\\Tools\\VsDevCmd.bat\"",
                    "&&"
                ]
            }
        }
    },
    "tasks": [
        {
            "type": "shell",
            "label": "Build AnyFSE.Service Debug",
            "command": "msbuild.exe",
            "args": [
                "AnyFSE.Service.vcxproj",
                "-property:Configuration=Debug",
                "-property:Platform=x64",
                "-target:Build"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "Build AnyFSE.Service Release",
            "command": "msbuild.exe",
            "args": [
                "AnyFSE.Service.vcxproj",
                "-property:Configuration=Release",
                "-property:Platform=x64",
                "-target:Clean;Build"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "Build AnyFSE.Control Debug",
            "command": "msbuild.exe",
